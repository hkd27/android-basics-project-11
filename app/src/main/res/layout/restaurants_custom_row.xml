<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/resturantsNameTV"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_marginTop="5dp"
        android:layout_margin="5dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/resturantsIV"
        android:layout_below="@+id/resturantsNameTV"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:layout_margin="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/resturantsLocTV"
        android:layout_below="@+id/resturantsIV"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:textAlignment="center"
        android:textSize="25sp"
        android:layout_margin="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/resturantsTimTV"
        android:textAlignment="center"
        android:layout_below="@+id/resturantsLocTV"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:layout_margin="5dp" />

</RelativeLayout>